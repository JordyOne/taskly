<h1>My Lists <a href="<%= new_task_list_path %>" style="font-size: 15px">+ Add Task List</a></h1>
<div class="flash-notice">
<% if flash[:notice] %>
    <p style="background-color: lawngreen; height: 20px; vertical-align: middle"><%= flash[:notice] %><button class="close-button">Close</button></p>

<% end %>
</div>

<% @task_lists.each do |task_list| %>
    <section class="task-list">
      <div>
        <h1 style="display: inline-block; width: 500px"><%= task_list.name %></h1>
        <a href="<%= edit_task_list_path(task_list) %>">Edit</a><a style="padding-left: 10px" href="<%= new_task_list_task_path(task_list) %>">Add
        Task</a>
      <button>Open</button>

        <div>
          <ul>
            <% @tasks.each do |task| %>
                <% if task.task_list_id == task_list.id.to_s %>
                    <li><%= task.name %><article style="float: right"><%= task.date_created %></article></li>
                    <a style="padding-left: 50px" href="<%= edit_task_list_task_path(task_list, task) %>">Edit</a>
                <% end %>
            <% end %>
          </ul>
        </div>

      </div>
    </section>
<% end %>
